-#  This file is app/views/movies/index.html.haml
%h1 All Movies

%table#movies
  %thead
    %tr
      - if flash[:hilite] == "title"
        %th#title_header.hilite= link_to "Movie Title", movies_path({:sort => "title"})
      - elsif
        %th#title_header= link_to "Movie Title", movies_path({:sort => "title"})
      %th Rating
      - if flash[:hilite] == "release_date"
        %th#release_date_header.hilite= link_to "Release Date", movies_path({:sort => "release_date"})
      - elsif
        %th#release_date_header= link_to "Release Date", movies_path({:sort => "release_date"})
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
